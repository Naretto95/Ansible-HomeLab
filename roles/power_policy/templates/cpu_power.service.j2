[Unit]
Description=Set CPU power preferences at boot
After=multi-user.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'for cpu in /sys/devices/system/cpu/cpu[0-9]*; do echo powersave > "$cpu/cpufreq/scaling_governor" 2>/dev/null || true; echo balance_power > "$cpu/cpufreq/energy_performance_preference" 2>/dev/null || true; done'

[Install]
WantedBy=multi-user.target